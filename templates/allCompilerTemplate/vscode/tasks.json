{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Tantuni",
			"command": "/usr/bin/g++-13",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/tantuni"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++-13"
		},
		{
			"type": "cppbuild",
			"label": "Lahmacun",
			"command": "/usr/bin/clang++-17",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/lahmacun"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++-17"
		}
	]
}
